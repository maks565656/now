<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".create_password">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="20dp"
        android:text="Пропустить"
        android:textSize="15sp"
        android:textColor="#1A6FEE" />

    <LinearLayout
        android:id="@+id/lay_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="116dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Создайте пароль"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Для защиты ваших персональных данных"
            android:textSize="15sp"
            android:textColor="#939396"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/dots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/lay_pass"
        android:layout_marginTop="56dp">
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:id="@+id/dot_0"
            android:src="@drawable/dot_0" />
        <ImageView
            android:layout_width="16dp"
            android:id="@+id/dot_1"
            android:layout_height="16dp"
            android:src="@drawable/dot_0"
            android:layout_marginStart="12dp"/>
        <ImageView
            android:layout_width="16dp"
            android:id="@+id/dot_2"
            android:layout_height="16dp"
            android:src="@drawable/dot_0"
            android:layout_marginStart="12dp"/>
        <ImageView
            android:layout_width="16dp"
            android:id="@+id/dot_3"
            android:layout_height="16dp"
            android:src="@drawable/dot_0"
            android:layout_marginStart="12dp"/>
    </LinearLayout>

    
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dots"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true">
        <TableRow>
            <Button
                android:id="@+id/pass_btn1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="1"
                android:tag="1"
                android:textSize="24sp"
                android:onClick="num_click"
                android:background="@drawable/crug_btn"/>
            <Button
                android:id="@+id/pass_btn2"
                android:text="2"
                android:tag="2"
                android:textSize="24sp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="24dp"
                android:onClick="num_click"
                android:background="@drawable/crug_btn"/>
            <Button
                android:id="@+id/pass_btn3"
                android:text="3"
                android:tag="3"
                android:textSize="24sp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="24dp"
                android:onClick="num_click"
                android:background="@drawable/crug_btn"/>
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/pass_btn4"
                android:text="4"
                android:tag="4"
                android:textSize="24sp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="24dp"
                android:onClick="num_click"
                android:background="@drawable/crug_btn"/>
            <Button
                android:id="@+id/pass_btn5"
                android:text="5"
                android:tag="5"
                android:textSize="24sp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                android:onClick="num_click"
                android:background="@drawable/crug_btn"/>
            <Button
                android:id="@+id/pass_btn6"
                android:text="6"
                android:tag="6"
                android:textSize="24sp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                android:onClick="num_click"
                android:background="@drawable/crug_btn"/>
        </TableRow>
        <TableRow android:orientation="vertical">
            <Button
                android:id="@+id/pass_btn7"
                android:text="7"
                android:tag="7"
                android:textSize="24sp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="24dp"
                android:onClick="num_click"
                android:background="@drawable/crug_btn"/>
            <Button
                android:id="@+id/pass_btn8"
                android:text="8"
                android:tag="8"
                android:textSize="24sp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                android:onClick="num_click"
                android:background="@drawable/crug_btn"/>
            <Button
                android:id="@+id/pass_btn9"
                android:text="9"
                android:tag="9"
                android:textSize="24sp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                android:onClick="num_click"
                android:background="@drawable/crug_btn"/>
        </TableRow>
        <TableRow>
            <ImageButton
                android:id="@+id/pass_btn"
                android:src="@drawable/del_icon"
                android:textSize="24sp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="24dp"
                android:onClick="num_click"
                android:tag="dlt"
                android:background="@drawable/crug_btn"/>
            <Button
                android:id="@+id/pass_btn0"
                android:textSize="24sp"
                android:text="0"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="24dp"
                android:onClick="num_click"
                android:tag="0"
                style="@style/Base.Theme.Medic.ButtonPass"/>

        </TableRow>
    </TableLayout>





</RelativeLayout>